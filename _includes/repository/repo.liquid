{% assign repo_url = include.repository | split: '/' %}
{% assign owner = repo_url[0] %}
{% assign name = repo_url[1] %}
{% assign repo = site.github.public_repositories | where: "name", name | first %}

<div class="card h-100 shadow-sm">
  <div class="card-body">
    <h5 class="card-title mb-1">
      <a href="https://github.com/{{ include.repository }}">{{ name }}</a>
    </h5>

    {% if repo.description %}
      <p class="card-text small text-muted">
        {{ repo.description }}
      </p>
    {% endif %}

    <p class="card-text small mb-0 text-muted">
      {{ owner }}
      {% if repo.language %} · {{ repo.language }}{% endif %}
      {% if repo.stargazers_count %} · ★ {{ repo.stargazers_count }}{% endif %}
    </p>
  </div>
</div>
