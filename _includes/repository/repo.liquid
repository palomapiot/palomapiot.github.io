{% assign repo_url = include.repository | split: '/' %}
{% assign owner = repo_url[0] %}
{% assign name = repo_url[1] %}
{% assign repo = site.github.public_repositories | where: "name", name | first %}

<div class="repo p-3 text-left border rounded w-100 mb-3">
  <a href="https://github.com/{{ include.repository }}">
    <strong>{{ name }}</strong>
  </a>

  {% if repo.description %}
    <p class="repo-description mt-1 mb-1 small">
      {{ repo.description }}
    </p>
  {% endif %}

  <div class="text-muted small">
    {{ owner }}
    {% if repo.language %} · {{ repo.language }}{% endif %}
    {% if repo.stargazers_count %} · ★ {{ repo.stargazers_count }}{% endif %}
  </div>
</div>
